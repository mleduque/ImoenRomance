/* firkraag kill with imoen */
//everyone must be in the area
IF
	InParty("Imoen2")
	ActuallyInCombat()
	Dead("firkra02")
	Exists("firkra02")
	Global("MRFirkraag","GLOBAL",0)
THEN
	RESPONSE #100
	SetGlobal("MRFirkraag","GLOBAL",1)
END

